package main

import (
	"flag"
	"fmt"
	"io/fs"
	"path/filepath"
)

var (
	root                string
	dirCount, fileCount uint32
)

func main() {

	flag.StringVar(&root, "path", ".", "--path=./")
	flag.Parse()

	//fmt.Println(root)
	filepath.WalkDir(root, func(path string, d fs.DirEntry, err error) error {
		//fmt.Println(path)
		//fmt.Println(filepath.Base(path))
		fmt.Println(filepath.Dir(path))
		if d.IsDir() {
			dirCount++
		} else {
			fileCount++
		}
		return nil
	})

}
